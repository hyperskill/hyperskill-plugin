<idea-plugin package="org.hyperskill.academy.ai.debugger.kotlin">
  <dependencies>
    <!--suppress PluginXmlValidity -->
    <module name="ai-debugger-core"/>
    <plugin id="org.jetbrains.kotlin"/>
  </dependencies>

  <extensions defaultExtensionNs="HyperskillEducational">
    <sliceManager language="kotlin" implementationClass="org.hyperskill.academy.ai.debugger.kotlin.slice.KtSliceManager"/>
    <intermediateBreakpointProcessor language="kotlin" implementationClass="org.hyperskill.academy.ai.debugger.kotlin.KtIntermediateBreakpointProcessor"/>
    <testFinder language="kotlin" implementationClass="org.hyperskill.academy.ai.debugger.kotlin.impl.KtTestFinder"/>
  </extensions>
</idea-plugin>